<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/x_axis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="X:"
        android:textSize="12dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/x_data"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="12dp"
        android:layout_marginLeft="18dp" />

    <TextView
        android:id="@+id/y_axis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:text="Y:"
        android:textSize="12dp"
        android:layout_marginLeft="59dp" />

    <TextView
        android:id="@+id/y_data"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="12dp" />

    <TextView
        android:id="@+id/z_axis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginTop="5dp"
        android:text="Z:"
        android:textSize="12dp"
        android:layout_marginLeft="112dp" />

    <TextView
        android:id="@+id/z_data"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="12dp"
        android:layout_marginLeft="125dp" />

    <TextView
        android:id="@+id/delay_title"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:text="Delay:"
        android:textSize="12dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/delay_data"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="22dp"
        android:text=""
        android:textSize="10dp" />

    <TextView
        android:id="@+id/delay_dim"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="22dp"
        android:text="ms"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/rot_title"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:text="Rot:"
        android:textSize="12dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/rot_data"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="42dp"
        android:text=""
        android:textSize="10dp" />

    <TextView
        android:id="@+id/grip_title"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="42dp"
        android:text="Grip:"
        android:textSize="12dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/grip_data"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="42dp"
        android:text=""
        android:textSize="10dp" />

    <Button
        android:id="@+id/up_buttons"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="0dp"
        android:foreground="@android:drawable/arrow_up_float" />

    <Button
        android:id="@+id/down_buttons"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="29dp"
        android:foreground="@android:drawable/arrow_down_float" />

    <Button
        android:id="@+id/delete_buttons"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/delete" />

</RelativeLayout>